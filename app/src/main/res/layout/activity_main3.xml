<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A93F51B5"
    app:cardCornerRadius="20dp"
    tools:context=".MainActivity2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A93F51B5">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Yesterday"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:id = "@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "jan 03, 2021"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="40dp"
        android:id = "@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text"
   />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/LinearLay1"
        app:layout_constraintTop_toBottomOf="@id/textView"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@drawable/cir"
            android:backgroundTint="@color/black"
            android:src = "@drawable/img_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Pankaj Followed you"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20sp"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:text="Following"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#2D000000"

        android:id = "@+id/btnFollow1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LinearLay1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="jan 02, 2021"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFollow1" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:text="Saved Tip"
        android:textColor="@color/white"
        android:textSize="22sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:src="@drawable/img_1"
        android:id = "@+id/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id = "@+id/LinearLay"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background= "@drawable/chat"
            android:layout_marginLeft="50dp"

            android:textSize="22sp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"

            android:text="50"
            android:textSize="22sp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src = "@drawable/thump"
            android:layout_marginLeft="10dp"

            android:textSize="22sp"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"

            android:text="50"
            android:textSize="22sp"
            />
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/LinearLay"
    android:text="Saved Tip"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:id = "@+id/SaveTrip"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="10dp"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/SaveTrip"
    android:src = "@drawable/img_5"
    android:scaleType="fitXY"
    android:id = "@+id/NimitImage"
    android:layout_marginLeft="50dp"
    app:layout_constraintStart_toStartOf="parent"
    />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/NimitImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text = "Go to Fourth Page"

        android:textColor="@color/white"
        android:background="@drawable/bg"
        android:id = "@+id/btnThird"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>